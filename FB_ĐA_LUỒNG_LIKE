                    EC.element_to_be_clickable((By.CSS_SELECTOR, 'button.swal2-confirm.swal2-styled'))
                ).click()
        # Xu li lai job loi + in ra
                delay_anti(1)
                biendem += 1
                tongxu += xu
                print(f" [Luá»“ng {index}] {CYAN}| {biendem} |  FACEBOOK  | {RED} áº¨n ID {RESET} |{GREEN} HoÃ n ThÃ nh {RESET}| {YELLOW}+{xu}{RESET} | {MAGENTA}Tá»•ng xu: {tongxu}{RESET} | {BLUE}Time: {datetime.now().strftime('%H:%M:%S')}{RESET} | ")
                
                #print(f"{CYAN}{NGHIENG}[ FACEBOOK ] {RESET} | {RED} áº¨n ID {RESET} |{GREEN} HoÃ n ThÃ nh {RESET}| {BLUE}Time: {datetime.now().strftime('%H:%M:%S')}{RESET} | ")
        except:
            delay_die(1)
            WebDriverWait(driver, 10).until(EC.number_of_windows_to_be(2))

            all_windows = driver.window_handles
            driver.switch_to.window(all_windows[1])
            driver.close()
            driver.switch_to.window(all_windows[0])
            delay_die(1)
                            
            element = driver.find_element(By.XPATH, '/html/body/div[1]/div/div[1]/div[2]/div[3]/div[1]')

frames = ['|', '/', '-', '\\']  

# HÃ m delay chung vá»›i tham sá»‘ cho hÃ nh Ä‘á»™ng vÃ  thá»i gian
def delay_action(second, action_text, is_error=False):
    for i in range(second * 10, 0, -1):
        icon = frames[i % len(frames)]  # Chá»n icon theo bÆ°á»›c
        color = RED if is_error else CYAN if i % 2 == 0 else BLUE
        bracket_color = YELLOW if i % 2 == 0 else MAGENTA
        print(f"{color}{icon} {action_text} {bracket_color}[{i//10}.{i%10}s] {RESET}", end="\r")
        time.sleep(0.1)
    print(" " * 60, end="\r")   
def delay(second):
    delay_action(second, "Äang cháº¡y job")
def delay_laplai(second):
    delay_action(second, "Äang láº¥y job")
def delay_die(second):
    delay_action(second, "Job die => Äang bá» qua", is_error=True)
def delay_anti(second):
    delay_action(second, "Äang cháº¡y antiband")
def delay_xoa(second):
    delay_action(second, "Äang Chuáº©n Bá»‹ TÃ i NguyÃªn VÃ o Tool") 
# Táº¡o profile
def tao_profile_moi():
    index = 1
    while True:
        new_profile_path = os.path.join(base_path, f"chrome_profile_{index}")
        if not os.path.exists(new_profile_path):
            break
        index += 1

    print(f"{CYAN}â¡ï¸ Äang táº¡o profile chrome_profile_{index}, vui lÃ²ng Ä‘Äƒng nháº­p GoLike{RESET}")
    driver = create_driver(new_profile_path, headless=False)
    driver.set_window_size(500, 700)
    driver.get("https://app.golike.net/login")
    input("ğŸ‘‰ Sau khi Ä‘Äƒng nháº­p xong GoLike, nháº¥n Enter Ä‘á»ƒ tiáº¿p tá»¥c...")
    driver.execute_script("window.open('https://m.facebook.com/login');")
    input("ğŸ‘‰ Sau khi Ä‘Äƒng nháº­p xong Facebook, nháº¥n Enter Ä‘á»ƒ tiáº¿p tá»¥c...")
    driver.quit()
    print(f"{GREEN}âœ… ÄÃ£ táº¡o vÃ  lÆ°u chrome_profile_{index}{RESET}")
    return new_profile_path 
base_path = os.path.dirname(os.path.abspath(__file__))
profiles = []        
def load_profiles_from_file():
    profiles = []
    if os.path.exists('profiles.txt'):
        with open('profiles.txt', 'r') as file:     
            profiles = [line.strip().split("\\")[-1] for line in file.readlines()]
    return profiles
profiles = load_profiles_from_file()
def save_profiles_to_file(profiles):
    with open('profiles.txt', 'w') as file:
        for profile in profiles:
            file.write(f"{profile}\n")

def kiem_tra_profile(profiles):
    print(f"{CYAN}===== Danh sÃ¡ch cÃ¡c tÃ i khoáº£n ====={RESET}")
    for idx, profile in enumerate(profiles, start=1):
        print(f"[{idx}] {profile}")
    
    lua_chon = input(f"[W] Nháº­p sá»‘ tÃ i khoáº£n muá»‘n kiá»ƒm tra (hoáº·c nháº­p 'x' Ä‘á»ƒ thoÃ¡t): ").strip()
    if lua_chon.lower() == 'x':
        return
    
    try:
        lua_chon = int(lua_chon)
        if 1 <= lua_chon <= len(profiles):
            profile_path = profiles[lua_chon - 1]
            print(f"{CYAN}â¡ï¸ Äang kiá»ƒm tra tÃ i khoáº£n: {profile_path}{RESET}")
            
            driver = kt_driver(profile_path)
            driver.set_window_size(500,700)
            # Kiá»ƒm tra GoLike
            driver.get("https://app.golike.net/home")
            driver.execute_script("document.body.style.zoom = '0.80';")
            time.sleep(2)
            input("Báº¥m Enter Ä‘á»ƒ tiáº¿p tá»¥c náº¿u khÃ´ng thay Ä‘á»•i...")
            if "golike.net" in driver.current_url:
                print(f"{Fore.GREEN}[âœ…] ÄÃ£ Ä‘Äƒng nháº­p GoLike: {profile_path}{Style.RESET_ALL}")
            else:
                print(f"{Fore.YELLOW}[...] ChÆ°a Ä‘Äƒng nháº­p GoLike: {profile_path}{Style.RESET_ALL}")
                input("Vui lÃ²ng Ä‘Äƒng nháº­p GoLike rá»“i báº¥m Enter...")
            # Kiá»ƒm tra Facebook
            driver.get("https://www.facebook.com/friends")
            input("Báº¥m Enter Ä‘á»ƒ tiáº¿p tá»¥c náº¿u khÃ´ng thay Ä‘á»•i...")
            time.sleep(3)
            if "facebook.com" in driver.current_url:
                print(f"{Fore.GREEN}[âœ…] ÄÃ£ Ä‘Äƒng nháº­p Facebook: {profile_path}{Style.RESET_ALL}")
            else:
                input("Vui lÃ²ng Ä‘Äƒng nháº­p Facebook, sau Ä‘Ã³ báº¥m Enter...")

            driver.quit()
            print(f"{CYAN}â¡ï¸ ÄÃ£ hoÃ n thÃ nh kiá»ƒm tra tÃ i khoáº£n.{RESET}")

        else:
            print(f"{RED}âš ï¸ Sá»‘ tÃ i khoáº£n khÃ´ng há»£p lá»‡!{RESET}")
    except ValueError:
        print(f"{RED}âš ï¸ Vui lÃ²ng nháº­p sá»‘ há»£p lá»‡!{RESET}")
def kt_driver(profile_path):
    
    options = uc.ChromeOptions()
    options.add_argument(f"--user-data-dir={os.path.abspath(profile_path)}")
    options.add_argument("--disable-blink-features=AutomationControlled")
    options.add_argument("--force-device-scale-factor=1")
    options.add_argument("--no-first-run --no-service-autorun --password-store=basic")
    options.add_argument("--no-sandbox")
    options.add_argument("--disable-dev-shm-usage")
    options.add_argument("--disable-blink-features=AutomationControlled")
    mobile_ua = "Mozilla/5.0 (Linux; Android 9; SM-G960F) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/96.0.4664.45 Mobile Safari/537.36"
    options.add_argument(f"--user-agent={mobile_ua}")
    driver = uc.Chrome(options=options, use_subprocess=True)
    return driver
# HÃ m táº¡o driver vá»›i profile
def create_driver(profile_path, headless=False):
    
    options = uc.ChromeOptions()
    options.add_argument(f"--user-data-dir={os.path.abspath(profile_path)}")
    options.add_argument("--disable-blink-features=AutomationControlled")
    options.add_argument("--force-device-scale-factor=0.4")
    options.add_argument("--no-first-run --no-service-autorun --password-store=basic")
    options.add_argument("--no-sandbox")
    options.add_argument("--disable-dev-shm-usage")
    options.add_argument("--disable-blink-features=AutomationControlled")
    #mobile_ua = "Mozilla/5.0 (Linux; Android 9; SM-G960F) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/96.0.4664.45 Mobile Safari/537.36"
    #options.add_argument(f"--user-agent={mobile_ua}")
    if headless:
        options.headless = True
        options.add_argument("--window-size=1920,1080")
        options.add_argument('--log-level=3')  # Chá»‰ hiá»‡n lá»—i nghiÃªm trá»ng
        options.add_argument('--disable-gpu')
        options.add_argument('--disable-software-rasterizer')

    driver = uc.Chrome(options=options, use_subprocess=True)
    return driver
